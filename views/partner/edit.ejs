<%- include('../partials/header') %>
<div class="jumbotron">
	<h3>Hi from edit page</h3>
	
	
	<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%= partner.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/<%= partner._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="partner[firstName]" value="<%= partner.firstName %>" 
						   placeholder="campground name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="partner[lastName]" value="<%= partner.lastName %>"
						   placeholder="image url" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="partner[gender]" value="<%= partner.gender %>" 
						   placeholder="description" required>
				</div>
				<div class="form-group">
						<input class="form-control" type="text" name="partner[age]" value="<%= partner.age %>" 
							   placeholder="cost in $" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block btn-control">Submit</button> 
				</div>
			</form>
			<a class="btn btn-lg btn-warning btn-control" href="/partner/<%= partner._id %>">Back</a>
			</div>
	</div>
</div>
	
	

<%- include('../partials/footer') %>